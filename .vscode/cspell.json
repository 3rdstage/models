{
  // https://streetsidesoftware.com/vscode-spell-checker/#customization : cspell.json, settings.json
  // https://streetsidesoftware.com/vscode-spell-checker/docs/configuration/

  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "words": [
    "consolas", // Fonts
    "lucida",
    "menlo",
    "webp", // Extensions
    "websocket", // Techonology Geneal
    "reentrancy",
    "emscripten", // https://emscripten.org/
    "addn", // `bn.js`
    "subn",
    "pickone", // `chance.js`
    "pickset",
    "varchar", // Database, DBMS
    "varchar2",
    "innodb", // MySQL, MariaDB
    "curdate",
    "timestampadd",
    "rlike",
    "keccak", // Blockchain
    "secp256k1",
    "ipfs",
    "soulbound",
    "bitcoin",
    "ethereum",
    "solana",
    "yellowpaper", // Ethereum
    "erc",
    "ierc",
    "chainid",
    "ropsten",
    "rinkeby",
    "kovan",
    "goerli",
    "vyper",
    "inheritdoc",
    "ganache",
    "remix",
    "remixd",
    "solhint",
    "Mythril",
    "MythX",
    "ConsenSys",
    "OpenZeppelin",
    "typechain",
    "struct", // Solidity
    "structs",
    "bytecode",
    "inheritdoc",
    "pausable",
    "mload",
    "plantuml", // PlantUML
    "startuml",
    "enduml",
    "skinparam",
    "startmindmap",
    "endmindmap",
    "addr", // General Abbreviations
    "addrs",
    "contr", // contract
    "contrs",
    "descr", // description
    "fctr", // factory
    "rslt" // result
  ],
  "flagWords": [ "hte" ],
  "ignorePaths": [ ],
  "patterns": [
    { "name" : "ipfs-url", "pattern": "/(?:ipfs|http|https)://.*Qm[0-9A-Za-z]*/"}
  ],
  "ignoreRegExpList": ["ipfs-url"],
  "enabledLanguageIds": ["asciidoc"],
  "enableFiletypes": [ "solidity", "asciidoc"],
  "languageSettings": [],
  "overrides": [
    {
      // https://jshint.com/docs/options/
      "filename": ".jshintrc",
      "words": [
        "esversion", "forin", "latedef", "nofunc", "noarg", "nonew", "quotmark"]
    }
  ],
  "dictionaries": ["AsciiDoc"],
  "dictionaryDefinitions": [
    {
      "name": "AsciiDoc", "path": "./cspell/asciidoc.txt", "addWords": true
    }
  ]
}
